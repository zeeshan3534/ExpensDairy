<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_background"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Icon of you category"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="selected Icon"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        android:gravity="center"
        />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">
    <RelativeLayout
        android:id="@+id/selected"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/button_backgroud"
        android:gravity="center"
        android:tag="tax"
        android:layout_marginEnd="5dp">
        <ImageView
            android:id="@+id/selectedImage"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:src="@drawable/tax"/>
    </RelativeLayout>
</RelativeLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <RelativeLayout
                android:id="@+id/tax"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:tag="tax"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/tax"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/receipt"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:tag="receipt"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/receipt"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/bill"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:tag="bill"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:src="@drawable/bill"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/cutlery"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:tag="cutlery"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:layout_width="50dp"

                    android:layout_height="50dp"
                    android:src="@drawable/cutlery"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/shopping"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:tag="shopping_basket"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/shopping_basket"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/subsciption"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:tag="subscription"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/subscription"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/insurance"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:tag="insurance"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/insurance"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/button_backgroud"
                android:gravity="center"
                android:tag="house"
                android:layout_marginEnd="5dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"

                    android:src="@drawable/house"/>
            </RelativeLayout>


        </LinearLayout>
    </HorizontalScrollView>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category Name"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <EditText
            android:id="@+id/category_name"
            android:padding="5dp"
            android:hint="Category"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/border_edit_text"/>
    </RelativeLayout>
    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true" />


    <RelativeLayout
        android:id="@+id/add_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Add Category"
           android:textSize="20dp"
           android:textColor="@color/white"
           android:textStyle="bold"
           android:padding="10dp"
           android:gravity="center"
           android:background="@drawable/button_backgroud"/>
    </RelativeLayout>






</LinearLayout>